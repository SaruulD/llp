<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Payroll Rule: Search -->
    <record id="view_llp_payroll_rule_filter" model="ir.ui.view">
        <field name="name">llp.payroll.rule.search</field>
        <field name="model">llp.payroll.rule</field>
        <field name="arch" type="xml">
            <search string="Search rule">
                <field name="name"/>
                <field name="code"/>
                <group expand="0" string="Group By">
                    <filter string="Code" name="code" context="{'group_by': 'code'}"/>
                    <filter string="Parent rule" name="group_parent" context="{'group_by': 'parent_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Payroll Rule: List View -->
    <record id="view_llp_payroll_rule_list" model="ir.ui.view">
        <field name="name">llp.payroll.rule.list</field>
        <field name="model">llp.payroll.rule</field>
        <field name="arch" type="xml">
            <list string="Payroll rule">
                <field name="name"/>
                <field name="code"/>
                <field name="ruleview_type"/>
                <field name="rule_type"/>
                <field name="value_type"/>
                <field name="rulefield_type"/>
            </list>
        </field>
    </record>

    <!-- Payroll Rule: Form View -->
    <record id="view_llp_payroll_rule_form" model="ir.ui.view">
        <field name="name">llp.payroll.rule.form</field>
        <field name="model">llp.payroll.rule</field>
        <field name="arch" type="xml">
            <form string="Payroll Rule">
                <sheet>
                    <h1>
                        <group>
                            <field name="name" required="1" placeholder="Name"/>
                        </group>
                        <group>
                            <field name="code" required="1" placeholder="Code"/>
                        </group>
                    </h1>

                    <group col="4">
                        <group>
                            <field name="ruleview_type" required="1" />
                            <field name="show_in_payroll" />
                            <field name="active" />
                            <field name="is_vacation_salary" />
                            <field name="is_vacation_time" />
                            <field name="is_show_sum" />
                        </group>
                        <group>
                            <field name="parent_id" options="{'no_create': True}" />
                            <field name="transaction_type" />
                        </group>
                    </group>

                    <field name="description" placeholder="Description" required="1" />

                    <notebook>
                        <page string="Configuration">
                            <group>
                                <group>
                                    <field name="rule_type" required="1" />
                                    <field name="value_type" required="rule_type == 'code'" invisible="rule_type != 'code'" />
                                    <field name="object_type" invisible="rule_type != 'code'" />
                                </group>
                                <group>
                                    <field name="rulefield_type" required="1" />
                                    <field name="decimal_point" required="1" />
                                </group>
                            </group>
                            <group>
                                <field name="percent" required="rule_type == 'percent'" invisible="rule_type != 'percent'"/>
                                <field name="regular_number" required="rule_type == 'regular'" invisible="rule_type != 'regular'" />
                            </group>
                            <group col="2">
                                <field name="python_code" placeholder="Python Code" invisible="rule_type != 'code'" required="rule_type == 'code'" widget="ace" options="{'mode': 'python'}"/>
                            </group>
                        </page>

                        <page string="History">
                            <field name="history_ids" readonly="1">
                                <list>
                                    <!-- <field name="month_id"/> -->
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="note"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>


    <record id="action_llp_payroll_rule" model="ir.actions.act_window">
        <field name="name">Payroll Rules</field>
        <field name="res_model">llp.payroll.rule</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_group_parent': 1}</field>
        <field name="help">List of payroll rules.</field>
    </record>

</odoo>
