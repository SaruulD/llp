<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- added fields on hr employee -->
    <record id="view_employee_vacation_data" model="ir.ui.view">
        <field name="name">hr.employee.vacation.data</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@id='o_work_employee_main']" position="inside">
                <group string="Vacation">
                    <field name="last_vacation_salary_date"/>
                    <field name="next_vacation_salary_date"/>
                </group>
            </xpath>
        </field>
    </record>


    <!-- Payroll Vacation: Search -->
    <record id="view_llp_payroll_employee_vacation_filter" model="ir.ui.view">
        <field name="name">llp.payroll.employee.vacation.search</field>
        <field name="model">llp.payroll.employee.vacation</field>
        <field name="arch" type="xml">
            <search string="Search vacation">
                <field name="code"/>
                <group expand="0" string="Group By">
                    <filter string="Month" name="month" context="{'group_by': 'month'}"/>
                    <filter string="Department" name="department_ids" context="{'group_by': 'department_ids'}"/>
                    <filter string="State" name="state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Payroll Vacation: List View -->
    <record id="view_llp_payroll_employee_vacation_list" model="ir.ui.view">
        <field name="name">llp.payroll.employee.vacation.list</field>
        <field name="model">llp.payroll.employee.vacation</field>
        <field name="arch" type="xml">
            <list string="Payroll employee vacation">
                <field name="code"/>
                <field name="month"/>
                <field name="department_ids" widget="many2many_tags"/>
                <field name="struct_type"/>
                <field name="state"/>
            </list>
        </field>
    </record>


    <!-- Payroll Vacation: Form View -->
    <record id="view_llp_payroll_employee_vacation_form" model="ir.ui.view">
        <field name="name">llp.payroll.employee.vacation.form</field>
        <field name="model">llp.payroll.employee.vacation</field>
        <field name="arch" type="xml">
            <form string="Payroll Vacation">

                <header>
                    <button name="action_send" invisible="state != 'draft'" string="Send" type="object" class="btn-primary"/>
                    <button name="action_confirm" invisible="state != 'pending'" string="Confirm" type="object" class="btn-primary"/>
                    <button name="action_return" invisible="state != 'pending'" string="Return" type="object" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,pending,done"/>
                </header>

                <sheet>
                    <h1>
                        <label for="code"/>
                        <field name="code" readonly="1"/>
                    </h1>

                    <group>
                        <field name="month" required="1"/>
                        <field name="department_ids" widget="many2many_tags"/>
                        <field name="struct_type" />
                    </group>

                    <notebook>
                        <page string="Employees">
                            <field name="line_ids" readonly="state != 'draft'">
                                <list >
                                    <field name="employee_id" options="{'no_create': True}" required="1" />
                                    <field name="department_id" readonly="1"/>
                                    <field name="total_salary"/>
                                    <field name="total_worked_day"/>
                                    <field name="one_day_salary"/>
                                    <field name="total_vacation_day"/>
                                    <field name="total_vacation_amount"/>
                                </list>
                                <form>
                                    <group>
                                        <group>
                                            <field name="employee_id" options="{'no_create': True}" required="1"/>
                                            <field name="department_id" readonly="1"/>
                                            <field name="month" readonly="1"/>
                                            <field name="total_salary"/>
                                            <field name="total_worked_day"/>
                                        </group>
                                        <group>
                                            <field name="total_vacation_day"/>
                                            <field name="one_day_salary"/>
                                            <field name="total_vacation_amount"/>
                                        </group>
                                    </group>
                                    <notebook>
                                        <page>
                                            <field name="month_line_ids">
                                                <list editable="bottom">
                                                    <field name="month"/>
                                                    <field name="salary" sum="Sum salary"/>
                                                    <field name="worked_day" sum="Sum worked day"/>
                                                </list>
                                            </field>
                                        </page>
                                    </notebook>
                                </form>

                            </field>
                        </page>
                    </notebook>

                </sheet>
                <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>

    <record id="action_llp_payroll_employee_vacation" model="ir.actions.act_window">
        <field name="name">Payroll Employee Vacation</field>
        <field name="res_model">llp.payroll.employee.vacation</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_group_parent': 1}</field>
        <field name="help">List of payroll employee vacations.</field>
    </record>
</odoo>
