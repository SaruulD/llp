<odoo>
    <record id="action_llp_payroll_account_move" model="ir.actions.act_window">
        <field name="name">Create payroll account move</field>
        <field name="res_model">llp.payroll.account.move</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_llp_payroll_account_move_form" model="ir.ui.view">
        <field name="name">llp.payroll.account.move.form</field>
        <field name="model">llp.payroll.account.move</field>
        <field name="arch" type="xml">
            <form string="Create payroll account move">
                <group>
                    <group>
                        <field name="department_id"/>
                        <field name="journal_id"/>
                    </group>
                    <notebook>
                        <page string="Lines">
                            <field name="line_ids" readonly="1" editable="bottom">
                                <list>
                                    <field name="account_id" />
                                    <field name="name" />
                                    <field name="debit" sum="Sum" />
                                    <field name="credit" sum="Sum" />
                                </list>
                                <form create="false">
                                    <group>
                                        <field name="name" />
                                        <field name="debit" sum="Sum" />
                                        <field name="credit" sum="Sum" />
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </group>

                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn btn-primary o_form_button_save"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
