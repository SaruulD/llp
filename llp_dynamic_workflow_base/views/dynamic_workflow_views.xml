<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="dynamic_workflow_search" model="ir.ui.view">
        <field name="name">dynamic.workflow.search</field>
        <field name="model">dynamic.workflow</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="model_id"/>
            </search>
        </field>
    </record>

    <record id="dynamic_workflow_form" model="ir.ui.view">
        <field name="name">dynamic.workflow.form</field>
        <field name="model">dynamic.workflow</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="model_id" options="{'no_create':True}"/>
                        </group>
                        <group>
                            <field name="model_name" invisible="1"/>
                            <field name="company_id" force_save="1"/>
                            <field name="department_ids" widget="many2many_tags" options="{'no_create':True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="state_line" string="State Line">
                            <field name="min_seq" invisible="1"/>
                            <field name="line_ids" nolabel="1">
                                <list editable="bottom" options="{'no_open':True}">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name" column_invisible="1"/>
                                    <field name="state_id" required="1"/>
                                    <field name="confirm_by" required="1"/>
                                    <field name="state" column_invisible="1"/>
                                    <field name="is_active" widget="boolean_toggle" optional="show"/>
                                    <field name="user_ids" widget="many2many_tags" />
                                    <field name="group_ids" widget="many2many_tags" />
                                    <field name="job_ids" widget="many2many_tags" />
                                    <field name="is_super" widget="boolean_toggle" optional="show"/>
                                    <field name="send_notif" widget="boolean_toggle" optional="show"/>
                                    <field name="model_states" column_invisible="1"/>
                                    <field name="model_state" optional="show"/>
                                    <field name="write_date" readonly="1" optional="show"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="dynamic_workflow_tree" model="ir.ui.view">
        <field name="name">dynamic.workflow.tree</field>
        <field name="model">dynamic.workflow</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
                <field name="model_id"/>
                <field name="company_id"/>
            </list>
        </field>
    </record>

    <record id="dynamic_workflow_action" model="ir.actions.act_window">
        <field name="name">Dynamic Workflow</field>
        <field name="res_model">dynamic.workflow</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="dynamic_workflow_tree"/>
    </record>

    <menuitem id="root_dynamic_workflow" groups="llp_dynamic_workflow_base.group_dynamic_workflow" name="Dynamic Workflow" web_icon="llp_dynamic_workflow_base,static/description/icon.png" sequence="3"/>
    <menuitem action="dynamic_workflow_action" id="menu_dynamic_workflow" name="Dynamic Workflow" parent="root_dynamic_workflow" sequence="33"/>
</odoo>